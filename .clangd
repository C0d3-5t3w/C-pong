CompileFlags:
  Add: [-xc, -std=c99, -Wall, -Wextra]
  
Diagnostics:
  Suppress: 
    - unused-parameter
    - missing-prototypes

# Index configuration
Index:
  Background: Build
  StandardLibrary: Yes

# Use simpler formatting style
---
Style:
  ColumnLimit: 80
  IndentWidth: 2
  ContinuationIndentWidth: 2
  UseTab: Never
  SortIncludes: false
